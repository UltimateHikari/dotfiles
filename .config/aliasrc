# Verbosity and settings that you pretty much just always are going to want.
alias \
	la="ls -lHa" \
	bat="cat /sys/class/power_supply/BAT?/capacity" \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -iv" \
	mkd="mkdir -pv" \
	ffmpeg="ffmpeg -hide_banner"

# Colorize commands when possible.
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi"

# Productivity shortcuts
alias tsm="transmission-remote-cli"
alias musicsync="sudo rsync -rlptDzv --size-only --delete-delay --progress /media/AndyArchive/Music/  /mnt/MusicOnCayin/"
alias config='/usr/bin/git --git-dir=$HOME/dotfiles --work-tree=$HOME'
alias realias='. ~/.config/zsh/.zshrc'
alias memocom='nvim ~/AndyData/commands'

# Programming shortcuts
alias vivado='/home/andy/Bloat/Vivado/Vivado/2019.2/bin/vivado -log /home/andy/Bloat/Vivado/vivado.log -journal /home/andy/Bloat/Vivado/vivado.jou'
alias cbuild='cd ./build && cmake .. && make; cd ..'

